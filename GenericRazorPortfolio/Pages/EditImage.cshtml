@page
@model GenericRazorPortfolio.Pages.EditImageModel
@{
    ViewData["Title"] = "EditImage";
}


<div class="py-5">
    <h1 class="display-4 text-center">Edit Image</h1>

    <hr />
    <div class="row">

        <div class="col-1 col-md-3"> </div>
        <div class="col-10 col-md-6">
            <form method="post" class="text-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ImageInfo.Title" class="control-label"></label>
                    <input asp-for="ImageInfo.Title" class="form-control" />
                    <span asp-validation-for="ImageInfo.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageInfo.Description" class="control-label"></label>
                    <input asp-for="ImageInfo.Description" class="form-control" />
                    <span asp-validation-for="ImageInfo.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageInfo.ThumbnailLink" class="control-label"></label>
                    <input asp-for="ImageInfo.ThumbnailLink" class="form-control" />
                    <span asp-validation-for="ImageInfo.ThumbnailLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageInfo.Link" class="control-label"></label>
                    <input asp-for="ImageInfo.Link" class="form-control" />
                    <span asp-validation-for="ImageInfo.Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-1 col-md-3"> </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
